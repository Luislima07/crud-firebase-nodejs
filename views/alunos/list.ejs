<!-- Cabeçalho da página: título à esquerda + botão "Nova Categoria" à direita -->
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 mb-0">Alunos</h1>
  <!-- Link para o formulário de criação -->
  <a href="/alunos/create" class="btn btn-primary">Novo Alunos</a>
</div>

<!-- Card Bootstrap para dar um visual "caixa" -->
<div class="card shadow-sm">
  <div class="card-body p-0">
    <!-- Tabela responsiva para exibir as categorias -->
    <table class="table table-hover align-middle mb-0">
      <!-- Cabeçalho da tabela -->
      <thead class="table-light">
        <tr>
          <th>Nome</th>
          <th>Descrição</th>
          <th class="text-end">Ações</th>
        </tr>
      </thead>
      <tbody>
         <% if(Object.keys(alunos).lenght == 0 ){ %>
            <tr>
              <td colspan="2" class="text-center text-muted py-4">
                  <h1>Nenhum registro</h1>      
              </td>
            </tr> 
          <% } %>
          <% for(let id in alunos ) { %>
            <tr>
              <td>
                <%= alunos[id].nome %>
              </td>
              <td>
                <%= alunos[id].descricao %>
              </td>
              <td class="text-end">
                <a href="/alunos/<%= id %>/edit" class="btn btn-sm btn-outline-warning">Editar</a>
                <a href="/alunos/<%= id %>/delete"  onclick="return confirm('Excluir o <%= alunos[id].nome %>')" class="btn btn-sm btn-outline-danger">Deletar</a>
              </td>
            </tr>
            <% } %>
      </tbody>
    </table>
  </div>
</div>